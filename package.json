{
  "name": "monorepo-vue-starter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "release": "tsx scripts/release.ts",
    "start:apps": "turbo run start --parallel --filter='./apps/*'",
    "start:nuxt-app": "turbo run start --filter nuxt-app",
    "start:storybook": "turbo run start --filter storybook",
    "start:vite-app": "turbo run start --filter vite-app",
    "start": "turbo run start --parallel",
    "test:watch": "vitest -w --dir",
    "test": "pnpm test --filter testing",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@pnpm/find-workspace-packages": "^6.0.7",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "10.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/prompts": "2.4.4",
    "@types/semver": "7.3.13",
    "conventional-changelog-cli": "2.2.2",
    "eslint-config-custom": "link:packages/eslint-config-custom",
    "execa": "7.1.1",
    "multi-semantic-release": "3.0.2",
    "picocolors": "1.0.0",
    "prettier": "2.8.8",
    "prompts": "2.4.2",
    "semver": "7.5.0",
    "simple-git-hooks": "2.8.1",
    "tsx": "3.12.7",
    "turbo": "1.9.3",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "simple-git-hooks": {
    "pre-push": "pnpm lint",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "packageManager": "pnpm@8.4.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react"
      ],
      "allowedVersions": {
        "vite": "3"
      }
    }
  }
}
